@{
    ViewData["Title"] = "DogBlog";
}
<div class="header">
    <div class="u-pull-right">
        <p>Logged in as @ViewBag.CurrUser.Name</p>
        <p> | </p>
        <form action="/logout" method="post">
            <button type="submit" class="link">Logout</button>
        </form>
    </div>
</div>
<div class="container">

    <div class="title">
        <div class="row">
            <div class="four columns">
                <h1>Manolo |</h1>
            </div>
            <div class="navbar" class="eight columns">
                <ul>
                    <li>
                        <h5><a href="/Dashboard">Home</a></h5>
                    </li>
                    <li>
                        <h5><a href="/Blog", "Blog">Blog</a></h5>
                    </li>
                    <li>
                        <h5><a href="">Photos</a></h5>
                    </li>
                    <li>
                        <h5><a href="/Parks">Parks Visited</a></h5>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    <form action="CreateBlog" method="post">
        <div class="form-group row">
            <label for="title" class="col-2 col-form-label">Title:</label>
            <div class="col-10">
                <input type="text" class"form-control" id="title" name="Title">
            </div>
        </div>
        <div class="form-group row">
            <label for="content" class="col-2 col-form-label">Content:</label>
            <div class="col-10">
                <textarea class"form-control" id="content" name="Content" cols="50" rows="20"></textarea>
            </div>
        </div>
        <input type="hidden" name="UserId" value=@ViewBag.CurrUser.UserId>
        <div>
            <button type="submit" class="btn btn-info">Submit</button>
        </div>
    </form>

</div>